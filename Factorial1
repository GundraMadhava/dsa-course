
#include <stdio.h>

// Function to calculate factorial using an iterative loop
unsigned long long factorial(int n) {
    unsigned long long result = 1;
    for (int i = 1; i <= n; i++) {
        result *= i;
    }
    return result;
}

int main() {
    int num = 3; // Change this value as needed
    printf("Factorial of %d: %llu\n", num, factorial(num));
    return 0;
}
